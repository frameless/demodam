{
  "source": ["./src/theme/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/",
      "files": [
        {
          "destination": "css/index.css",
          "format": "css/variables",
          "options": {
            "selector": ".demodam-theme, .demodam-theme ::backdrop",
            "outputReferences": true
          }
        }
      ]
    }
  }
}
